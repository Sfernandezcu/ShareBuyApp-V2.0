        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/lbl_apellido"/>
    <EditText
        android:id="@+id/text_usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/lbl_usuario"/>
    <EditText
        android:id="@+id/text_contrase単a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="@string/lbl_contrase単a"/>
    <EditText
        android:id="@+id/text_verificarcontrase単a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="@string/lbl_verificarContrase単a"/>

    <Button
        android:id="@+id/button_registrarse_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_registrarse"
        android:onClick="onClickButton"/>


</LinearLayout>
